<div class = "box">

    <h3 style="color:red;"><%= flash[:message] %></h3>


<%= form_tag('/login', method: :post) do %>

  <div class="form-group">
    <h3><%= label_tag(:username, "Username:") %></h3>

    <%= collection_select(:stylist, :username, Stylist.all, :username, :username, prompt: "Please select your username from this dropdown") %>
  </div>

  <div class="form-group">
  <h3><%= label_tag(:password, "Your password:") %></h3>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Login") %>
  </div>

<% end %> 
</div>

