
   
    <%= form_for @appointment do |f| %>
          
          <%= f.label "When" %>
          <%= f.datetime_local_field :appointment_datetime %>
          <%= f.label :service%>
          <%= f.collection_select :id, Appointment.all, :id, :service, {:include_blank => 'Choose your service'} %>
          <%= f.label "Existing Clients" %>
          <%= f.collection_select :client_id, Client.all, :id, :name, {:include_blank => 'Choose Client Name'} %>
          <%= f.label "New Client" %>
          <%=f.fields_for :client, @appointment.build_client do |c| %>
            <%= c.label :name %>
            <%= c.text_field :name %>
             <%= c.label :bday_month %>
            <%= c.text_field :bday_month %>
          <% end %>
          <%= f.submit %>
          <% end %>

    